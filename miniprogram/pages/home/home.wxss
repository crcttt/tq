/* pages/home/home.wxss */
.bg {
  position: fixed;
  z-index: -2;
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
/* 搜索 */
.search {
  z-index: 4;
  width: 100%;
  height: 90rpx;
}
.search .wrapper {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  height: 60rpx;
  margin: 15rpx 50rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  border: none;
  border-bottom: 1rpx solid #fff;
}
.search image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}
.search input {
  flex: 1;
  color: #fff;
}
.placeholderClass {
  color: #fff;
}
/* 预报 */
.cent{
  color: #fff;
  text-align: center;
  height: 760rpx;
  padding: 20rpx;
  position: relative;
  
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.ct{
  font-size: 40rpx;
  color: #fff;
  box-sizing: border-box;
}
.ctimg{
  width: 40rpx;
  height: 40rpx;
}
.date{
  padding-top: 20rpx;
  font-size: 26rpx;
}
.ctn{
  font-size: 150rpx;
  color: #fff;
  padding: 30rpx 50rpx 0;
  box-sizing: border-box;
  margin-top: 50rpx;
  margin-bottom: 40rpx;
  
}

.kq{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}
.kq text {
  font-size: 24rpx;
  height: 1em;
  line-height: 1em;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(240, 240, 240, .2);
}
.kqt{
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(240, 240, 240, .2);
  margin-bottom: 30rpx;
}
/* 小时 7日 */
.guide .title {
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
  background: rgba(0, 0, 0, .5);
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}
.guide .seven ,.guide .hours{
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
  background: rgba(0, 0, 0, .5);
  font-size: 28rpx;
  height: 250rpx;
  line-height: 60rpx;
  color: #fff;
  display: flex;
  overflow-x:auto;
}
.guide .seven::-webkit-scrollbar ,.guide .hours::-webkit-scrollbar {
    display: none;
}
.guide .item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 200rpx;
  flex-shrink: 0;
  margin:0 20rpx;
}
.h-tem{font-size: 32rpx}

/* 生活指数 */
.liveIndex {
  background: rgba(0, 0, 0, .5);
  margin-bottom: 20rpx;
  color: #fff;
}
.liveIndex .item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
  padding: 20rpx 0;
  margin: 0 30rpx;
}
.liveIndex .item:last-child {
  border-bottom: none;
}
.liveIndex .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
}
.liveIndex .item .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.liveIndex .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}